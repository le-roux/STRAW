<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="straw.polito.it.straw.activities.SearchDetailActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:layout_gravity="left|top"
            android:background="@drawable/customborder"
            android:id="@+id/e">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:id="@+id/img"
                android:layout_gravity="left|top" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/name"
                android:layout_gravity="center_horizontal|top" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/price"
                android:layout_gravity="center_horizontal|bottom" />

            <RatingBar
                style="?android:attr/ratingBarStyleSmall"
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RestaurantPrice"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="2.5"
                android:layout_gravity="center" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="341dp"
            android:layout_gravity="center_horizontal|bottom">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="227dp"
                android:id="@+id/reviews"
                android:background="@drawable/customborder"
                android:layout_gravity="center_horizontal|bottom" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:layout_gravity="left|top"
                android:background="@drawable/customborder">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/menu"
                    android:id="@+id/menu"
                    android:layout_gravity="left|top"
                    android:background="@drawable/customborder_buttons"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/s_book"
                    android:id="@+id/booking"
                    android:layout_gravity="center_horizontal|top"
                    android:background="@drawable/customborder_buttons"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/s_preo"
                    android:id="@+id/preorder"
                    android:layout_gravity="right|top"
                    android:background="@drawable/customborder_buttons"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/s_add_rv"
                    android:id="@+id/add_review"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/customborder_buttons"/>
            </FrameLayout>

        </FrameLayout>
    </FrameLayout>
</RelativeLayout>
