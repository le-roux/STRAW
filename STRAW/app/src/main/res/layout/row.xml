<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TEXTlololololo"
        android:id="@+id/text_textView"
        android:layout_alignBottom="@+id/text_editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/text_textView"
        android:layout_toEndOf="@+id/text_textView" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/r_type_spinner"
        android:layout_alignBottom="@+id/text_editText"
        android:layout_alignParentTop="true"
        android:spinnerMode="dropdown"
        android:layout_toRightOf="@+id/text_textView"
        android:layout_toEndOf="@+id/text_textView" />
</RelativeLayout>