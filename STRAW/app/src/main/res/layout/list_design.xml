<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/cyan_light"
    android:orientation="horizontal"
    android:padding="5dip" >

    <!--  ListRow Left side Thumbnail image -->
    <LinearLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip">



        <ImageView
            android:id="@+id/PlateImage"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:src="@drawable/pizza"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/PlateName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Pizza"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/PlateDescription"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/PlateName"
        android:textColor="#343434"
        android:textSize="10dp"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Description, description, ingrédient, ingrédient, ingrédient, ingrédient"

        />

    <TextView
        android:id="@+id/PlatePrice"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textColor="#343434"
        android:textSize="15dp"
        android:text="4.99€"
        android:layout_alignTop="@+id/PlateDescription"
        android:layout_toLeftOf="@+id/RemoveButton"
        android:layout_toStartOf="@+id/RemoveButton"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/RemoveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:text="@string/Remove"
        android:textSize="10dp"
        android:background="@drawable/customborder_buttons"
        />

</RelativeLayout>