<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/Relativelayout03"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="@drawable/customborder"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:layout_above="@+id/edit_button">
        <ImageView
            android:layout_width="160sp"
            android:layout_height="160sp"
            android:id="@+id/photo_imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/reservation_history" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/email"
            android:id="@+id/email_textView"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/tel_editText"
            android:layout_alignStart="@+id/tel_editText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="user_info"
            android:id="@+id/tel_editText"
            android:layout_below="@+id/email_textView"
            android:layout_toRightOf="@+id/photo_imageView"
            android:layout_marginLeft="22dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="diet"
            android:id="@+id/r_n_editText"
            android:layout_below="@+id/tel_editText"
            android:layout_toRightOf="@+id/photo_imageView"
            android:layout_marginLeft="22dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Pref_t"
            android:id="@+id/addr_editText"
            android:layout_below="@+id/r_n_editText"
            android:layout_toRightOf="@+id/photo_imageView"
            android:layout_marginLeft="22dp" />

        <TextView
            android:id="@+id/reservation_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/Content_size"
            android:textColor="@color/link_color"
            android:text="@string/res_h"
            android:focusable="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/list_friends"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/review_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/Content_size"
            android:textColor="@color/link_color"
            android:text="@string/rev_h"
            android:focusable="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/list_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/Content_size"
            android:textColor="@color/link_color"
            android:text="@string/friends"
            android:focusable="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/review_history"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_prof"
        android:id="@+id/edit_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/customborder_buttons"/>
</RelativeLayout>